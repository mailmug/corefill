{
    "name": "mailmug/corefill",
    "type": "php-ext",
    "license": "BSD-3-Clause",
    "description": "C-based Symfony polyfill alternative for PHP, delivering native performance.",
    "require": {
        "php": "^8.0"
    },
    "php-ext": {
        "extension-name": "corefill",
        "configure-options": [
            {
                "name": "enable-corefill",
                "needs-value": false,
                "description": "whether to enable corefill support"
            }
        ]
    }
}
